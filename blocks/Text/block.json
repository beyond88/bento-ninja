{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "bento-ninja/text",
    "version": "1.0.0",
    "title": "Bento Text",
    "category": "bento-ninja",
    "icon": "text",
    "description": "Add text content in a bento grid layout.",
    "keywords": ["text", "bento", "grid"],
    "supports": {
        "html": true,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "content": {
            "type": "string",
            "source": "html"
        }
    },
    "allowedBlocks": [
        "core/heading",
        "core/paragraph"
    ],
    "textdomain": "bento-ninja",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}